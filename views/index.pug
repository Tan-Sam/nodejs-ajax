extends layout
block content
  h1= title
  p Welcome to #{title}
  doctype html
  html
    head
      title The amazing shopping cart
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      // Bootstrap core CSS
      link(href='http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.4/css/bootstrap.min.css', rel='stylesheet', media='screen')
      // Local style
      link(href='stylesheets/style.css', rel='stylesheet', media='screen')
    body
      .container
        header.row.header
          h1 WDI Shop
        section#cart.row
          .col-md-12

        section.row.create
          .col-md-2.name
            .form-group
              input.form-control(type='text', name='name', placeholder='Name')
          .col-md-2.price
            .form-group
              input.form-control(type='number', name='price', min='0', placeholder='Price')
          .col-md-2.createProduct
            button.btn.btn-success(type='button') Create
          .col-md-2.col-md-offset-4.calc
            button.btn.btn-info(type='button') Calculate
        section.row.total
          h1
            | Total:
            br
            |  $
            span#grandTotal 00.00
      // jQuery (necessary for Bootstrap's JavaScript plugins)
      script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
      // Include all compiled plugins (below), or include individual files as needed
      script(src='http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.4/js/bootstrap.min.js')
      // template
      script#productRowTpl(type='text/template').
        <div class="row product">
        <div class="col-md-3 title">{{Name}}</div>
        <div class="col-md-3 price">${{Price}}</div>
        <div class="col-md-3 qtr">
          <input type="number" name="quantity" min="0" max="50" value="0"/>
        </div>
        <div class="col-md-1 subtotal">$0.00</div>
        <div class="col-md-2 delete">
        <button type="button" class="btn btn-danger">Delete</button>
        </div>
        </div>

block scripts
    script(src='javascripts/main.js')
